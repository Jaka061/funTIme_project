<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="recycleTextBig">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
<!--        <item name="android:layout_marginVertical">10dp</item>-->
    </style>

    <style name="recycleText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="uiText">
        <item name="android:textColor">@color/funTimeText</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="material">
        <item name="helperTextTextColor">@color/red</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="android:textSize">15sp</item>
        <item name="helperText">Обязательное поле!</item>
        <item name="android:layout_marginVertical">15dp</item>
    </style>
</resources>